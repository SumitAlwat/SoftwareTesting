package practiseJava;

import java.util.Scanner;

public class Practise_002 {
	public static void main(String[] args) {
	
		
//		Question-1
		
		Scanner Sum = new Scanner(System.in);
		
		System.out.println("Enter the integer value of a");
		int a = Sum.nextInt();
		
		System.out.println("Enter the integer value of b");
		int b = Sum.nextInt();
		
		System.out.println("Enter the integer value of c");
		int c = Sum.nextInt();
		
		int add = a+b+c;
		System.out.println("The addition of the given no. is " +add);
		
		
//		Question-2
		
		System.out.println("Enter the marks of sub1 b/w 0 to 100");
		int sub1 = Sum.nextInt();
		
		System.out.println("Enter the marks of sub2 b/w 0 to 100");
		int sub2 = Sum.nextInt();
		
		System.out.println("Enter the marks of sub3 b/w 0 to 100");
		int sub3 = Sum.nextInt();
		
		System.out.println("Enter the marks of sub4 b/w 0 to 100");
		int sub4 = Sum.nextInt();
		
		System.out.println("Enter the marks of sub5 b/w 0 to 100");
		int sub5 = Sum.nextInt();
		
		float Per = (float) (sub1+sub2+sub3+sub4+sub5)/50;
		System.out.println("The CGPA is " +Per);

		
//	    Question-3
		
		System.out.println("Please enter your name");
		String S = Sum.nextLine();
		System.out.println("hello " +S+ ", have a good day!");
		
//		Question-4
		
		System.out.println("Enter the value in kilometers");
		double Km = Sum.nextDouble();
		
		double Ml = 0.6214*Km;
		System.out.println("The value in miles would be " +Ml);
		
//		Question-5
		
		System.out.println("Enter any numeric value");
		System.out.println(Sum.hasNextInt());
		
		
		Sum.close();
	}

}
